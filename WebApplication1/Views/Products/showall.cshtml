


@for(int i=0; i<4; i++)
{
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/images/@Model[i].Image" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model[i].Name</h5>
                    <p class="card-text">@Model[i].Description</p>
                    <p class="card-text"><small class="text-muted">@Model[i].Price</small></p>
                </div>
            </div>
        </div>
    </div>


}
